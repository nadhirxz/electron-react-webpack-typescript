{
	"name": "electron-react",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"build": "webpack",
		"react:dev": "webpack serve --mode=development",
		"electron:dev": "nodemon",
		"dev": "concurrently --kill-others \"npm run react:dev\" \"npm run electron:dev\"",
		"start": "npm run build && electron build/main.js",
		"package-win": "electron-builder build --win -c.extraMetadata.main=build/main.js --publish never",
		"package-win-portable": "npm run build && electron-builder build --win portable -c.extraMetadata.main=build/main.js --publish never"
	},
	"build": {
		"files": [
			"build/**/*",
			"node_modules/**/*"
		],
		"directories": {
			"buildResources": "assets"
		}
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"bytenode": "^1.3.3",
		"electron-is-dev": "^2.0.0"
	},
	"devDependencies": {
		"@types/react": "^17.0.21",
		"@types/react-dom": "^17.0.9",
		"concurrently": "^6.2.1",
		"create-file-webpack": "^1.0.2",
		"dotenv": "^10.0.0",
		"electron": "^14.0.1",
		"electron-builder": "^22.11.7",
		"html-webpack-plugin": "^5.3.2",
		"nodemon": "^2.0.12",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.3",
		"webpack": "^5.53.0",
		"webpack-cli": "^4.8.0",
		"webpack-dev-server": "^4.2.1"
	}
}